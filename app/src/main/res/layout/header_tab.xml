<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tab_scroller"
    android:layout_gravity="center_horizontal"
    android:fillViewport="false"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:paddingLeft="@dimen/tab_padding"
            android:paddingRight="@dimen/tab_padding"
            android:text="Tab Content"
            android:id="@+id/button1"
            android:background="@drawable/header_button_shape"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:paddingLeft="@dimen/tab_padding"
            android:paddingRight="@dimen/tab_padding"
            android:text="Tab Content"
            android:id="@+id/button2"
            android:background="@drawable/header_button_shape"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:text="Tab Content"
            android:id="@+id/button3"
            android:background="@drawable/header_button_shape"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:paddingLeft="@dimen/tab_padding"
            android:paddingRight="@dimen/tab_padding"
            android:text="Tab Content"
            android:id="@+id/button4"
            android:background="@drawable/header_button_shape"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:paddingLeft="@dimen/tab_padding"
            android:paddingRight="@dimen/tab_padding"
            android:text="Tab Content"
            android:id="@+id/button5"
            android:background="@drawable/header_button_shape"
            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_button_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tab_margin"
            android:layout_marginRight="@dimen/tab_margin"
            android:paddingLeft="@dimen/tab_padding"
            android:paddingRight="@dimen/tab_padding"
            android:text="Tab Content"
            android:id="@+id/button6"
            android:background="@drawable/header_button_shape"
            />
    </LinearLayout>
</HorizontalScrollView>
